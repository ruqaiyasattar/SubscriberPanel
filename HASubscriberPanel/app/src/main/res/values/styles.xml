<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CheckBox" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/sec_color_one</item>
        <item name="colorControlActivated">@color/pri_color_two</item>
    </style>

    <style name="SpinnerTheme" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:background">@drawable/spinner_layout</item>
        <item name="android:textColor">@color/pri_color_one</item>
        <item name="android:textColorHint">@color/pri_color_one</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
